<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/companyListItemLogoImageView"
                tools:src="@drawable/retweet_icon"
                android:layout_width="96dp"
                android:layout_height="96dp" />
            <LinearLayout
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/companyListItemCompanyNameTextView"
                    android:fontFamily="@font/helvetica_bold"
                    android:textColor="@color/colorTextDark"
                    tools:text="Company Name"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/companyListItemStateCountryTextView"
                    android:textSize="16sp"
                    tools:text="State, Country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/companyListItemWebsiteTextView"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    tools:text="https://www.microsoft.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/companyListItemTwitterImageView"
                        android:layout_weight="1"
                        tools:src="@drawable/twitter_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <ImageView
                        android:id="@+id/companyListItemYouTubeImageView"
                        android:layout_weight="1"
                        tools:src="@drawable/youtube_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <ImageView
                        android:id="@+id/companyListItemLinkedInImageView"
                        android:layout_weight="1"
                        tools:src="@drawable/linkedin_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <ImageView
                        android:id="@+id/companyListItemFacebookImageView"
                        android:layout_weight="1"
                        tools:src="@drawable/facebook_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.design.card.MaterialCardView>