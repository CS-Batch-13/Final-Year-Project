<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView app:cardBackgroundColor="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="12dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/analyzePostTitleTextView"
            android:fontFamily="@font/helvetica_bold"
            tools:text="Post Title"
            android:textColor="@color/colorTextDark"
            android:textSize="20sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/postListItemImageView"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <TextView
                android:id="@+id/analyzePostDescriptionTextView"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:maxLines="6"
                android:textColor="@color/colorTextDark"
                android:ellipsize="end"
                tools:text="Post Description"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#f5f5f5"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/analyzePostSourceNameTextView"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/helvetica_bold"
                android:textSize="16sp"
                tools:text="SOURCE"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/analyzePostVisitWebsiteImageView"
                android:layout_marginEnd="16dp"
                android:tint="@color/colorTextDark"
                tools:src="@drawable/internet"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/analyzePostShareImageView"
                android:tint="@color/colorTextDark"
                android:src="@drawable/ic_menu_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.card.MaterialCardView>